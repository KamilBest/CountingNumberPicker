<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.best.countingnumberpicker.CountingNumberPicker
        android:id="@+id/customView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        custom:btnsBackgroundDrawable="@drawable/oval_btns_drawable"
        custom:hintText="Test"
        custom:minusBtnIconDrawable="@drawable/cnp_ic_minus"
        custom:plusBtnIconDrawable="@drawable/cnp_ic_plus" />

    <com.best.countingnumberpicker.CountingNumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        custom:btnsBackgroundDrawable="@drawable/red_btns_drawable"
        custom:btnsIconTintColor="#FFDF9E"
        custom:hintText="Test2"
        custom:minusBtnIconDrawable="@drawable/ic_minus"
        custom:plusBtnIconDrawable="@drawable/ic_plus"
        custom:startValue="21.00"
        custom:tickValue="0.25" />

    <com.best.countingnumberpicker.CountingNumberPicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        custom:btnsBackgroundDrawable="@drawable/orange_rectangle_btns_drawable"
        custom:hintText="Test3"
        custom:minusBtnIconDrawable="@drawable/cnp_ic_minus"
        custom:plusBtnIconDrawable="@drawable/cnp_ic_plus"
        custom:startValue="-5"
        custom:tickValue="1.25" />

</LinearLayout>